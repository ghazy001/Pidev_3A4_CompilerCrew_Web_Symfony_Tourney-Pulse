{% extends 'base_back_user.html.twig' %}

{% block title %}User
{% endblock %}
{% block content %}
	{% if app.session.get('isBanned') == 1 %}
		<p>This account is banned.</p>
		<form action="{{ path('app_logout') }}" method="post">
			<button type="submit">Disconnect</button>
		</form>
	{% else %}

		<h1>User</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Password</th>
					<td>{{ user.password }}</td>
				</tr>
				<tr>
					<th>Username</th>
					<td>{{ user.username }}</td>
				</tr>
				<tr>
					<th>Number</th>
					<td>{{ user.number }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_user_index') }}">back to list</a>


		{{ include('user/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
