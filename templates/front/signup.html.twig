<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="Striker HTML5 Template">

		<title>Tourney Pulse</title>

		<!-- Favicon -->
		<link
		rel="shortcut icon" type="image/x-icon" href="assets/media/tournee_logo.png">

		<!-- All CSS files -->
		<link rel="stylesheet" href="assets/css/vendor/bootstrap.min.css">
		<link rel="stylesheet" href="assets/css/vendor/font-awesome.css">
		<link rel="stylesheet" href="assets/css/vendor/slick.css">
		<link rel="stylesheet" href="assets/css/vendor/slick-theme.css">
		<link rel="stylesheet" href="assets/css/app.css">

		<script async src="https://www.googletagmanager.com/gtag/js?id=UA-266165434-1"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
function gtag() {
dataLayer.push(arguments);
}
gtag('js', new Date());

gtag('config', 'UA-266165434-1');
		</script>


	</head>

	<body>
		<!-- Back To Top Start -->
		<a href="#main-wrapper" id="backto-top" class="back-to-top">
			<i class="fas fa-angle-up"></i>
		</a>
		<!-- Main Wrapper Start -->
		<div
			id="main-wrapper" class="main-wrapper overflow-hidden">
			<!-- signup area Start -->
			<div class="signup p-96">
				<div class="container">
					<div class="heading mb-64">
						<h2>Sign Up</h2>
						<p>Join Tourney Pulse</p>
					</div>
					<div class="row">
						<div class="container">
							<div class="row justify-content-center">
								<div class="col-xl-4 col-lg-6 col-md-8 offset-xl-2 offset-lg-3 offset-md-2 mb-xl-0 mb-64">


									{{ form_start(form, {'attr': {'class': 'signup-form'}}) }}
									{% for message in app.flashes('error') %}
										<div class="alert alert-danger alert-dismissible fade show" role="alert">
											{{ message }}
											<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
										</div>
									{% endfor %}


									<div class="form-group mb-32">
										{{ form_row(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
										<div class="error-message">
											{% if form_errors(form.firstName) %}
												{{ form_errors(form.firstName) }}
											{% endif %}
										</div>
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group mb-32">
										{{ form_row(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
										<div class="error-message">
											{% if form_errors(form.lastName) %}
												{{ form_errors(form.lastName) }}
											{% endif %}
										</div>
									</div>

									<div class="form-group mb-32">
										{{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
									</div>

									<div class="form-group mb-32">
										{{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
									</div>

									<div class="form-group mb-32">
										{{ form_row(form.number, {'attr': {'class': 'form-control', 'placeholder': 'Phone number'}}) }}
									</div>

									<div class="form-group mb-32">
										{{ form_label(form.password.first, 'Password') }}
										{{ form_widget(form.password.first, {'attr': {'class': 'form-control password-input', 'placeholder': 'Password'}}) }}
										<div class="error-message">
											{% if form_errors(form.password.first) %}
												{{ form_errors(form.password.first) }}
											{% endif %}
										</div>
									</div>

									<div class="form-group mb-32">
										{{ form_label(form.password.second, 'Repeat Password') }}
										{{ form_widget(form.password.second, {'attr': {'class': 'form-control password-input', 'placeholder': 'Repeat Password'}}) }}
										<div class="error-message">
											{% if form_errors(form.password.second) %}
												{{ form_errors(form.password.second) }}
											{% endif %}
										</div>
									</div>

									
									<button type="submit" class="form-btn w-100 mb-32">CREATE ACCOUNT</button>
									{{ form_end(form) }}
									<p class="link">Already have an account?
										<a href="{{ path('app_login') }}">Log in here.</a>
									</p>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Jquery Js -->
			<script src="assets/js/vendor/jquery-3.6.3.min.js"></script>
			<script src="assets/js/vendor/bootstrap.min.js"></script>
			<script src="assets/js/vendor/slick.min.js"></script>
			<script src="assets/js/vendor/jquery-appear.js"></script>
			<script src="assets/js/vendor/jquery-validator.js"></script>
			<!-- Site Scripts -->
			<script src="assets/js/app.js"></script>
		</body>
	</body>
</html>
