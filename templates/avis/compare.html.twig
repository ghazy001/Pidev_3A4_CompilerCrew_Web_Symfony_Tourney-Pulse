
{% extends 'base.html.twig' %}

{% block body %}


<div style="margin-top: 200px;margin-left: 500px">

    {{ form_start(form) }}



    <div class="row">
        <div class="col-sm-6">
            <div class="form-group mb-32">
                {{ form_label(form.user1, 'First player name') }}
                {{ form_widget(form.user1, {'attr': {'class': 'form-control', 'id': 'fname', 'required': true}}) }}
                {{ form_errors(form.user1) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group mb-32">
                {{ form_label(form.user2, 'Second player name') }}
                {{ form_widget(form.user2, {'attr': {'class': 'form-control', 'id': 'fname', 'required': true}}) }}
                {{ form_errors(form.user2) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group mb-32">
                {{ form_widget(form.submit, {'attr': {'class': 'form-btn w-100 mb-32'}}) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}


    {% if comparisonResult is defined %}


        <div class="info">
            <div class="info__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" height="24" fill="none"><path fill="#393a37" d="m12 1.5c-5.79844 0-10.5 4.70156-10.5 10.5 0 5.7984 4.70156 10.5 10.5 10.5 5.7984 0 10.5-4.7016 10.5-10.5 0-5.79844-4.7016-10.5-10.5-10.5zm.75 15.5625c0 .1031-.0844.1875-.1875.1875h-1.125c-.1031 0-.1875-.0844-.1875-.1875v-6.375c0-.1031.0844-.1875.1875-.1875h1.125c.1031 0 .1875.0844.1875.1875zm-.75-8.0625c-.2944-.00601-.5747-.12718-.7808-.3375-.206-.21032-.3215-.49305-.3215-.7875s.1155-.57718.3215-.7875c.2061-.21032.4864-.33149.7808-.3375.2944.00601.5747.12718.7808.3375.206.21032.3215.49305.3215.7875s-.1155.57718-.3215.7875c-.2061.21032-.4864.33149-.7808.3375z"></path></svg>
            </div>
            <div class="info__title">{{ comparisonResult }} </div>
            <div class="info__close"><svg height="20" viewBox="0 0 20 20" width="20" xmlns="http://www.w3.org/2000/svg"><path d="m15.8333 5.34166-1.175-1.175-4.6583 4.65834-4.65833-4.65834-1.175 1.175 4.65833 4.65834-4.65833 4.6583 1.175 1.175 4.65833-4.6583 4.6583 4.6583 1.175-1.175-4.6583-4.6583z" fill="#393a37"></path></svg></div>
        </div>
    {% endif %}

</div>
    <style>
        .info {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            width: 465px;
            padding: 12px;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: start;
            background: #509AF8;
            border-radius: 8px;
            box-shadow: 0px 0px 5px -3px #111;
        }

        .info__icon {
            width: 20px;
            height: 20px;
            transform: translateY(-2px);
            margin-right: 8px;
        }

        .info__icon path {
            fill: #fff;
        }

        .info__title {
            font-weight: 500;
            font-size: 14px;
            color: #fff;
        }

        .info__close {
            width: 20px;
            height: 20px;
            cursor: pointer;
            margin-left: auto;
        }

        .info__close path {
            fill: #fff;
        }
    </style>
    {% endblock %}
